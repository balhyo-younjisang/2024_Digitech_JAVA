package OOP2;

public class Student {
	private int sno;
	private String name;
	private int money;
	
	// 객체는 생성자가 필요하다.

	public Student() {
	}
	
	public Student(int sno, String name) {
		this.sno = sno;
		this.name = name;
	}
	

	public Student(int sno, String name, int money) {
		this.sno = sno;
		this.name = name;
		this.money = money;
	}
	
	// method 만들기
	// 학생의 잔고 정보 출력
	public void showStudent() {
		System.out.println(name + "님의 남은 돈은 " + money "원입니다");
	}
	
	public String getStudent() {
		return name;
	}
}
